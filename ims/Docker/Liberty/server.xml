    <application-bnd>
           <security-role name="ims-admin">
               <user name="omar"/>
           </security-role>
           <security-role name="post-user">
               <user name="postman"/>
           </security-role>
           <security-role name="pgm-user">
               <user name="pgmer"/>
           </security-role>
       </application-bnd>
    </webApplication> -->
	
    <keyStore id="defaultKeyStore" password="password"/>
</server>